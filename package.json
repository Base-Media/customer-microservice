{
  "name": "customer-microservice",
  "version": "1.0.0",
  "description": "this is a backend application api for the customer service database",
  "main": "dist/server.js",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "docker:build": "cd .. && docker-compose build customers --no-cache",
    "docker:up": "cd .. && docker-compose up customers -d"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/Base-Media/customer-microservice.git"
  },
  "author": "Claude Lamarre",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Base-Media/customer-microservice/issues"
  },
  "homepage": "https://github.com/Base-Media/customer-microservice#readme",
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/mongoose": "^10.0.2",
    "@nestjs/graphql": "^12.0.11",
    "@nestjs/apollo": "^12.0.11",
    "@nestjs/config": "^3.1.1",
    "@nestjs/axios": "^3.0.1",
    "@nestjs/mapped-types": "^2.0.2",
    "@apollo/subgraph": "^2.9.3",
    "apollo-server-express": "^3.13.0",
    "graphql": "^16.10.0",
    "graphql-scalars": "^1.24.1",
    "graphql-tag": "^2.12.6",
    "mongoose": "^8.8.1",
    "axios": "^1.6.0",
    "class-validator": "^0.14.0",
    "class-transformer": "^0.5.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "user-auth-token": "git@github.com:Base-Media/user-auth-token.git"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": ["**/*.(t|j)s"],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
